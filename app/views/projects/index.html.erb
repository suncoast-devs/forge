<table class="table is-fullwidth">
  <thead>
  <tr>
    <th>Title</th>
    <th>Deadline</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project.title, project %></td>
      <td><%= time_ago_in_words project.deadline_on %></td>
      <td><span class="tag"><%= project.status.humanize %></span></td>
    </tr>
  <% end %>
  </tbody>
</table>